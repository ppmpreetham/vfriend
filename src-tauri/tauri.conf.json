{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vitfriend",
  "version": "0.1.0",
  "identifier": "com.vitfriend.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "vitfriend",
        "width": 600,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
    "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "vfriend.preetham.top", "pathPrefix": ["/open"] },
        { "host": "vfriend.preetham.top" }
      ],
      "desktop": {
        "schemes": ["vfriend"]
      }
    }
  }
}
